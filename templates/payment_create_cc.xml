<?xml version="1.0" encoding="UTF-8"?>
<Request version="2">
	<Authentication>
		<client>%gateway.client%</client>
		<password>%gateway.password%</password>
	</Authentication>
	<Transaction>
		<TxnDetails>
			<merchantreference>%order.reference%</merchantreference>
			<amount currency="EUR">%order.total_base%</amount>
			<capturemethod>ecomm</capturemethod>
			<ThreeDSecure>
				<purchase_datetime>%gateway.date%</purchase_datetime>
				<verify>yes</verify>
				<merchant_url>%gateway.storeurl%</merchant_url>
				<purchase_desc>%order.description%</purchase_desc>
			</ThreeDSecure>
			<Risk>
				<Action service="1">
					<MerchantConfiguration>
						<channel>W</channel>
					</MerchantConfiguration>
					<CustomerDetails>
						<OrderDetails>
							<BillingDetails>
								<state_province></state_province>
								<name>%customer.first_name% %customer.last_name%</name>
								<address_line1>%customer.address%</address_line1>
								<address_line2></address_line2>
								<city>%customer.city%</city>
								<zip_code>%customer.zip_code%</zip_code>
								<country>%customer.country%</country>
							</BillingDetails>
						</OrderDetails>
						<PersonalDetails>
							<first_name>%customer.first_name%</first_name>
							<surname>%customer.last_name%</surname>
							<telephone>%customer.phone%</telephone>
						</PersonalDetails>
						<ShippingDetails>
							<title></title>
							<first_name>%customer.first_name%</first_name>
							<surname>%customer.last_name%</surname>
							<address_line1>%customer.address%</address_line1>
							<address_line2></address_line2>
							<city>%customer.city%</city>
							<country>%customer.country%</country>
							<zip_code>%customer.zip_code%</zip_code>
						</ShippingDetails>
						<PaymentDetails>
							<payment_method>CC</payment_method>
						</PaymentDetails>
						<RiskDetails>
							<email_address>%customer.email%</email_address>
							<ip_address>%gateway.ip%</ip_address>
						</RiskDetails>
					</CustomerDetails>
				</Action>
			</Risk>
		</TxnDetails>
		<HpsTxn>
			<method>setup_full</method>
			<page_set_id>%gateway.page_set_id%</page_set_id>
			<return_url>%gateway.successurl%</return_url>
			<expiry_url>%gateway.errorurl%</expiry_url>
			<error_url>%gateway.errorurl%</error_url>
			<DynamicData>
				<dyn_data_3>show</dyn_data_3>
				<dyn_data_4>%gateway.storeurl%</dyn_data_4>
			</DynamicData>
		</HpsTxn>
		<CardTxn>
			<method>auth</method>
		</CardTxn>
	</Transaction>
</Request>